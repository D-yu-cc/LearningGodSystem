/* chat 页面样式 */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 聊天容器 */
.chat-container {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

/* 消息项 */
.message-item {
  margin-bottom: 20rpx;
}

.message {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

/* 用户消息 */
.user-message {
  justify-content: flex-end;
}

.user-message .message-content {
  background: #007AFF;
  color: white;
  border-radius: 20rpx 20rpx 8rpx 20rpx;
  max-width: 70%;
  margin-right: 20rpx;
}

.user-avatar {
  background: #007AFF;
  color: white;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

/* AI消息 */
.ai-message {
  justify-content: flex-start;
}

.ai-message .message-content {
  background: white;
  color: #333;
  border-radius: 20rpx 20rpx 20rpx 8rpx;
  max-width: 70%;
  margin-left: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.ai-avatar {
  background: #34C759;
  color: white;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

/* 消息内容 */
.message-content {
  padding: 20rpx 24rpx;
  position: relative;
}

.message-text {
  font-size: 28rpx;
  line-height: 1.4;
  word-wrap: break-word;
}

/* 打字指示器 */
.typing-indicator {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}

.typing-dot {
  width: 8rpx;
  height: 8rpx;
  background: #999;
  border-radius: 50%;
  margin-right: 8rpx;
  animation: typing 1.4s infinite ease-in-out;
}

.typing-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.typing-dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes typing {
  0%, 60%, 100% {
    transform: translateY(0);
    opacity: 0.4;
  }
  30% {
    transform: translateY(-10rpx);
    opacity: 1;
  }
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: white;
}

.empty-text {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 20rpx;
}

.empty-hint {
  font-size: 26rpx;
  opacity: 0.8;
  display: block;
}

/* 输入容器 */
.input-container {
  background: white;
  padding: 20rpx;
  border-top: 1rpx solid #eee;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 50rpx;
  padding: 10rpx 20rpx;
}

.message-input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
  background: transparent;
  border: none;
  outline: none;
}

.send-btn {
  background: #007AFF;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 16rpx 32rpx;
  font-size: 26rpx;
  margin-left: 20rpx;
  min-width: 120rpx;
}

.send-btn:disabled {
  background: #ccc;
  color: #999;
}

.send-btn.loading {
  background: #007AFF;
  opacity: 0.7;
}

/* 快捷功能按钮 */
.quick-actions {
  display: flex;
  padding: 20rpx;
  background: white;
  border-top: 1rpx solid #eee;
}

.action-btn {
  flex: 1;
  background: #f8f9fa;
  color: #333;
  border: 1rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 20rpx 10rpx;
  margin: 0 10rpx;
  font-size: 24rpx;
}

.action-btn:disabled {
  background: #f5f5f5;
  color: #ccc;
  border-color: #eee;
}

.action-text {
  font-size: 24rpx;
}
